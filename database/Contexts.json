// Contexts definitions, including containing groups of scenes and its definitions
// - Default: If this is the default context when starting the game
// - Loading: Name of the loading scene between last and current context, or omit to disable
// - Scenes: List of scenes this context is composed of
//     - Name: Name of scene that is part of the context
//     - Pausable: If scene is pausable when game pause is requested

{
    // Splash screen
    "SplashScreen": {
        "Default": true,
        "Scenes": [
            {
                "Name": "ScnIntro",
                "Pausable": false
            }
        ]
    },
    
    // Main menu GUI and background
    "MainMenu": {
        "Bgm": "WriteYouJoeyPecoraro",
        "Scenes": [
            {
                "Name": "ScnMouse",
                "Pausable": false
            },
            {
                "Name": "ScnMenuGui",
                "Pausable": false
            },
            {
                "Name": "ScnMenuBack",
                "Pausable": false
            }
        ]
    },
    
    // Game, in-game and pause menu GUI
    "Game": {
        "Bgm": "SomedayCoyoteHearing",
        "Loading": "ScnLoading",
        "Scenes": [
            {
                "Name": "ScnGameMap",
                "Pausable": false
            },
            {
                "Name": "ScnGame",
                "Pausable": true
            }
        ]
    }
}