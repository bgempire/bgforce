// Default styles and config of GUI widgets. Must contain ALL properties, do not remove any!
// - Transitions: "SlideL", "SlideR", "ScaleV", "ScaleH", "Arc"
// - CharsAllowed: "Alphabetic", "AlphaNumeric", "Numeric", "Printable"

{
    // Variables
    "$ColorNormal" : [0.6, 0.6, 1.0, 1.0],
    "$ColorHover" : [0.6, 1.0, 0.6, 1.0],
    "$ColorClick" : [1.0, 0.6, 0.6, 1.0],
    "$ColorDisabled" : [1.0, 1.0, 1.0, 1.0],
    "$LabelColor" : [1.0, 1.0, 1.0, 1.0],
    "$LabelColorDisabled" : [0.5, 0.5, 0.5, 1.0],
    "$ShadowEnable" : true,
    "$ShadowColor" : [0.0, 0.0, 0.0, 1.0],
    "$ShadowColorDisabled" : [0.0, 0.0, 0.0, 0.5],
    "$TransitionSpeed" : 1.5,
    "$ShadowOffset" : [0.06, -0.06],
    "$SquareWidgetLabelOffset" : [1.8, 0.55],
    "$SquareWidgetSize" : [1.5, 1.5],
    "$RectWidgetLabelOffset" : [0.6, 0.67],
    "$RectWidgetSize" : [1.9, 1.5],
    "$RectWidgetLineSize" : 16,
    
    
    "Label" : {
        "Transition" : "Arc",
        "TransitionSpeed" : "$TransitionSpeed",
        
        // Label and shadow,
        "LineSize" : 50,
        "Justify" : "Left",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : [0.0, 0.0],
        "LabelSize" : 0.6,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable"
    },


    "Button" : {
        "Transition" : "SlideR",
        "TransitionSpeed" : "$TransitionSpeed",
    
        // Label and shadow
        "LineSize" : "$RectWidgetLineSize",
        "Justify" : "Center",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : "$RectWidgetLabelOffset",
        "LabelSize" : 0.65,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable",
    
        // Clickable element
        "TransitionOnClick" : false,
        "Offset" : [0.0, 0.0],
        "Size" : "$RectWidgetSize",
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorClick",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled"
    },


    "IconButton" : {
        "Transition" : "SlideL",
        "TransitionSpeed" : "$TransitionSpeed",
        
        // Label and shadow
        "LineSize" : 12,
        "Justify" : "Left",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : "$SquareWidgetLabelOffset",
        "LabelSize" : 0.65,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable",
        
        // Clickable element
        "TransitionOnClick" : false,
        "Offset" : [0.0, 0.0],
        "Size" : "$SquareWidgetSize",
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorClick",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled",
        
        // Icon element
        "IconOffset" : [0.7, 0.8],
        "IconColor" : [0.2, 0.2, 0.2, 1.0],
        "IconSize" : [1.1, 1.1],
        "IconRotation" : 0
    },


    "Checkbox" : {
        "Transition" : "SlideR",
        "TransitionSpeed" : "$TransitionSpeed",
    
        // Label and shadow
        "LineSize" : 40,
        "Justify" : "Left",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : "$SquareWidgetLabelOffset",
        "LabelSize" : 0.65,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable",
    
        // Clickable element
        "TransitionOnClick" : false,
        "Offset" : [0.0, 0.0],
        "Size" : "$SquareWidgetSize",
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorClick",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled"
    },


    "List" : {
        "Transition" : "SlideL",
        "TransitionSpeed" : "$TransitionSpeed",
    
        // Label and shadow
        "LineSize" : "$RectWidgetLineSize",
        "Justify" : "Center",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : "$RectWidgetLabelOffset",
        "LabelSize" : 0.65,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable",
    
        // Clickable element
        "TransitionOnClick" : false,
        "Offset" : [0.0, 0.0],
        "Size" : "$RectWidgetSize",
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorClick",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled",
    
        // List element
        "ArrowColorNormal" : [0.0, 0.0, 0.0, 0.1],
        "ArrowColorClick" : [0.0, 0.0, 0.0, 0.3],
        "Wrap" : false,
        "Translate" : false
    },


    "Input" : {
        "Transition" : "SlideL",
        "TransitionSpeed" : "$TransitionSpeed",
    
        // Label and shadow
        "LineSize" : "$RectWidgetLineSize",
        "Justify" : "Center",
        "LabelColor" : "$LabelColor",
        "LabelColorDisabled" : "$LabelColorDisabled",
        "LabelOffset" : "$RectWidgetLabelOffset",
        "LabelSize" : 0.65,
        "ShadowColor" : "$ShadowColor",
        "ShadowColorDisabled" : "$ShadowColorDisabled",
        "ShadowOffset" : "$ShadowOffset",
        "ShadowEnable" : "$ShadowEnable",
    
        // Clickable element
        "TransitionOnClick" : false,
        "Offset" : [0.0, 0.0],
        "Size" : "$RectWidgetSize",
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorHover",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled",
    
        // Input element
        "PlaceholderColor" : [0.5, 0.5, 0.5, 1.0],
        "PlaceholderColorDisabled" : [0.3, 0.3, 0.3, 1.0],
        "PlaceholderShadowColor" : [0.3, 0.3, 0.3, 1.0],
        "PlaceholderShadowColorDisabled" : [0.3, 0.3, 0.3, 0.5],
        "CharsAllowed" : "AlphaNumeric",
        "CharsLimit" : 15,
        "CursorCharacter" : "|",
        "CursorSpeed" : 0.2,
        "LineBreak" : false
    },
    
    
    "MouseCursor" : {
        "Size" : [0.8, 0.8],
        "Offset" : [0.0, 0.0],
        "CanvasSize" : [100, 100],
        "ColorNormal" : "$ColorNormal",
        "ColorClick" : "$ColorClick",
        "ColorHover" : "$ColorHover",
        "ColorDisabled" : "$ColorDisabled"
    }
}